<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gngconstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider">

    <TextView
        android:id="@+id/block_one"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:padding="16dp"
        android:gravity="center"
        android:text="Block One"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/block_two"/>

    <TextView
        android:id="@+id/block_two"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:padding="16dp"
        android:gravity="center"
        android:text="Block Two"
        app:layout_constraintTop_toBottomOf="@id/block_one"
        app:layout_constraintBottom_toTopOf="@id/block_three"/>

    <TextView
        android:id="@+id/block_three"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:padding="16dp"
        android:gravity="center"
        android:text="Block Three"
        app:layout_constraintTop_toBottomOf="@id/block_two"
        app:layout_constraintBottom_toTopOf="@id/block_four" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Start The Test"
        app:layout_constraintBottom_toBottomOf="@id/block_four"
        app:layout_constraintEnd_toEndOf="@id/block_three"
        app:layout_constraintStart_toStartOf="@id/block_four"
        app:layout_constraintTop_toBottomOf="@id/block_three" />


    <TextView
        android:id="@+id/block_four"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="2dp"
        android:background="@color/gray"
        android:padding="16dp"
        android:gravity="center"
        android:text="Block Four"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/block_three"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
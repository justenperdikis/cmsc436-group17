<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.group17gonogo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Group17GoNoGo">
        <activity android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LeaderboardActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".TestResultPopUp"
            android:label="@string/title_activity_test_result_pop_up"
            android:theme="@style/result_popup"
            android:screenOrientation="portrait"/>

        <activity android:name=".RegistrationActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".MainActivity"
            android:label="MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".GoNoGoActivity"
            android:label="Go-No-Go Test"
            android:screenOrientation="portrait"/>

        <activity android:name=".ReactionActivity"
            android:label="Reaction Test"
            android:screenOrientation="portrait"/>
    </application>

</manifest>